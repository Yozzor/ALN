{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite",

  "functions": {
    "api/upload.js": {
      "runtime": "nodejs18.x"
    },
    "api/photos.js": {
      "runtime": "nodejs18.x"
    }
  },

  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Permissions-Policy",
          "value": "camera=*, microphone=*, geolocation=*"
        }
      ]
    }
  ]
}
